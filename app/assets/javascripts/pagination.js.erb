
var paginate = function(){
  if ($('.pagination').length) {
      $(window).on('scroll', function() {
        var url = $('.pagination .next_page').attr('href');
        if($('#seo-text').length){
          var textTop = $('#seo-text').offset().top;
          if (url && $(window).scrollTop() > textTop - 1000) {
            $('.pagination').html('<div class="text-center h3 w-100">Загружаю ещё композиции...</div');
            return $.getScript(url);
          };
        } else {
          if (url && $(window).scrollTop() > $(window).height() -  $('.wrapper').height() - 50) {
            $('.pagination').html('<i class="fas fa-spinner fa-pulse fa-3x fa-fw"></i>');
            return $.getScript(url);
          };
        }
      });
      return $(window).scroll();
    };
};

var toTop = function(){
  $(window).scroll(function() {
    if ($(this).scrollTop() >= 1000) {        // If page is scrolled more than 50px
        $('#return-to-top').fadeIn(400);    // Fade in the arrow
    } else {
        $('#return-to-top').fadeOut(200);   // Else fade out the arrow
    }
  });
  $('#return-to-top').on('click', function() {      // When arrow is clicked
    $('body,html').animate({
        scrollTop : 0                       // Scroll to top of body
    }, 200);
  });
};
