.col-md-4
  = form_for [:admin, @comp] do |f|
    .form-group
      =f.label 'Название', class: 'control-label'
      =f.text_field :title, class: 'form-control'
    .form-group
      =f.label 'Изображение', class: 'control-label'
      =f.file_field :img, class: 'form-control'
    .form-group
      =f.submit 'Создать композицию', class: 'btn btn-primary'
