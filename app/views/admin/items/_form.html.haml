.form-wrapper
  .form
    %h2 Добавить товар
    = form_for [:admin, @item] do |f|
      .form-field
        =f.label 'Название'
        =f.text_field :name, class: 'form-input'
      .form-field
        =f.label 'Описание'
        =f.text_field :desc, class: 'form-input'
      .form-field
        =f.label 'Цена'
        =f.number_field :price, class: 'form-input'
      .form-field
        =f.label 'Изображение'
        =f.file_field :img, class: 'form-input'
      =f.submit 'Добавить товар', class: 'add-to-cart'
