.container
  %table.table
    %thead
      %th
        Дюймы
      %th
        Сантиметры
      %th
        Цена с гелием
    - @sizes.each do |size|
      %tr
        %td= size.in_inch
        %td= (size.in_inch * 2.54).round(0)
        %td= size.value
        %td
          = link_to 'Редактировать', edit_admin_size_path(size), class: 'btn btn-info btn-sm'
          = link_to 'Удалить', admin_size_path(size), class: 'btn btn-info btn-sm', method: :delete
          = link_to 'Товары', admin_items_path(size: size), class: 'btn btn-info btn-sm'
  = link_to 'Добавить размер', new_admin_size_path, class: 'btn btn-info'
