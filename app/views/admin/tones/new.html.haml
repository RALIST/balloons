.container
  = form_for [:admin, @tone] do |f|
    .form-group
      = f.label :name, 'Оттенок'
      = f.text_field :name, class: 'form-control'
      = f.number_field :code, class: 'form-control'
      = f.select :color_id, Color.all.map{|c| [c.name, c.id]}
    .form-group
      = f.submit 'Создать оттенок', class: 'btn btn-info'
