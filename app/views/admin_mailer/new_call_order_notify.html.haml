%h1
  = @call.call_type
%table
  %tr
    %td
      Имя
    %td
      = @call.username
  %tr
    %td
      Телефон
    %td
      = @call.userphone
  %tr
    %td
      Способы связи
    %td
      = @call.messangers.join(', ') if @call.messangers
  %tr
    %td
      Заявка поступила
    %td
      = @call.created_at.in_time_zone
  %tr
    %td
      Страница заказа:
    %td
      %a{href: @call.url }
        = @call.url

