$(document).on('ajaxComplete', function(){
  $(".add-to-cart<%=@composition.id%>").fadeOut().closest('div').html('Добавлено в корзину!').addClass('btn btn-success btn-block').attr('disabled', true);
  $('#menu').html('<%= j(render "delivery/layouts/main_menu") %>');
  $('.icon-wrapper small .badge').html('<%= @cart.positions.count %>');
  $('#responsive').html('<%= j(render "delivery/layouts/resp_menu")%>');
});





