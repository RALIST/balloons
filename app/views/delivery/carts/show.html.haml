- breadcrumb :cart
.container-fluid.c-list
  - if @cart.positions.any?
    .row
      .col-12.col-lg-9
        %h2.h5.text-center.mt-5.mt-lg-0
          %span.text-uppercase В корзине
        = render 'in_cart'
      .col-12.col-lg-3#subtotal
        = render 'subtotal'
  - else
    .col-md-12
      %h2
        В вашей корзине пока ничего нет
        %br
        = link_to 'Добавить в корзину', root_path, class: 'btn btn-info'


