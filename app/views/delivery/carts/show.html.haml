.cart
  - if @cart.positions.any?
    .item-in-cart-list
      - @cart.compositions.each do |c|
        %div{class: "item-in-cart"}
          .img
            = image_tag c.img.url(:thumb)
          .info
            %span.title
              В композицию входит:
              %br
            - @position = @cart.positions.find_by(composition_id: c.id)
            .subpositions
              = render @position.subpositions.order(:id)
            %span{class: "add-to-comp", style: 'cursor: pointer'} Добавить в композицию
            %div{class: "form-add-sub"}
              = render partial: 'delivery/carts/add', locals: {position: @position}
            = link_to 'Удалить', delivery_remove_from_cart_path(id: c.id), method: :post
    %div{style: 'clear: both;'}
    %span
      Total in cart
      .total
        = @cart.total_price
    = link_to 'Оформить заказ', new_delivery_order_path, class: 'add-to-cart'
  - else
    %span В вашей корзине пока ничего нет

%div{style: 'clear: both;'}


