- cache category do
  .col-6.col-lg-3.mb-3
    = link_to category_path(category) do
      .card.text-center.category-with-image
        = image_tag category.products.first.img, class: 'card-img-top', alt: 'Воздушные шары в категории ' + category.name, title: 'Воздушные шары в категории ' + category.name
        .card-body.justify-self-center.card-img-overlay
          .card-title.mb-0.text-uppercase.font-weight-bold.text-info.bg-light
            = category.name.capitalize