#feedback.my-3.px-4
  .feed-img.text-center
    = image_tag feedback.img(:preview), class: 'rounded-circle'
  .feed-text.text-center
    .lead
      = feedback.name
    .text-muted
      = link_to 'Профиль в соц.сетях', feedback.social_url, target: :blank  if feedback.social_url
    %span
      = feedback.body
    .small
      = Russian::strftime(feedback.created_at, "%d %b  '%y")


