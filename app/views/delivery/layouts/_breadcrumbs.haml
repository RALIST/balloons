- unless controller.controller_name == 'compositions' && action_name == 'show'
  .container-fluid.bread
    .row
      = breadcrumbs separator: '/', style: :bootstrap, semantic: true, fragment_tag: 'breadcrumb'
      / - breadcrumbs.tap do |links|
      /   - links.each do |link|
      /     - if link.current?
      /       .current
      /         .lead.text-uppercase= link.text
- else
  .container-fluid.bread-comp
    .container
      = breadcrumbs separator: " / ", style: :bootstrap, semantic: true, fragment_tag: 'breadcrumb'
      - breadcrumbs.tap do |links|
        - links.each do |link|
          - if link.current?
            .current
              .h2
                .text-uppercase
                  = link.text
                .small{itemprop: 'description'}
                  Композиция из воздушных шаров на #{@comp.tags.map(&:name).join(', ')}, #{@comp.receivers.map(&:title).join(', ') if @comp.receivers}
