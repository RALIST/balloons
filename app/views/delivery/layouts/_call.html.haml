-cache do
  .modal.fade{id: "call-modal",  tabindex: "-1",  role: "dialog"}
    .modal-dialog#call{role: "document"}
      .modal-content
        .modal-header
          %h3.modal-title
          %button.close{data: {dismiss: "modal"}, style: 'aria-label: "Close"'}
            %span
              &times;

        .modal-body.pt-0.container
          = render 'delivery/layouts/form_to_call'
          .row
            #form-call
              .row.align-items-center.justify-content-center
                .h4.w-100.text-center
                  Напишите нам в чате
                .text-center.mr-2
                  =image_tag 'telegram.png', class: 'img-fluid', style: 'width: 32px'
                  =image_tag 'whatsapp.png', class: 'img-fluid', style: 'width: 36px'
                  =image_tag 'viber.png', class: 'img-fluid', style: 'width: 36px'
                .lead
                  = t "cities.#{@city}.phones.mobile"

