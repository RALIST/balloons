.row
  .col-md-4
    = image_tag c.img.url(:original), class: 'img-responsive'
  .col-md-6
    .bg-brand
      %strong
        В композицию входит:
    .table-responsive
      %table.table.table-bordered.table-condensed
        %thead
          %tr
            %th
              Название
            %th
              Количество
            %th
              Цена
        %tbody
        - c.items.uniq.each do |i|
          %tr.item{data: {item_id: "#{i.id}"}}
            %td
              %span{style: 'cursor: pointer;'}
                = i.name
            %td
              = c.items.where(id: i.id).count
              шт.
            %td= number_to_currency(i.price_with_helium, precision: 0)
            %td.popover-img{style: 'display: none;'}
              = image_tag i.img.url(:small)
        %tr.text-right
          %td
          %td
            Итого:
          %td
            %strong
              = number_to_currency(c.price, precision: 0)
    .row
      .col-md-12
        - if c.tags.any?
          Композиция подойдет на
          - c.tags.each do |tag|
            %span
              = link_to delivery_search_path(tag_name: tag.name) do
                #{tag.name},
  .col-md-2.text-center
    %strong
      Похожие
    - c.related.limit(3).each do |related|
      %span{data: { toggle: 'modal', target: "#composition#{related.id}"},style: 'cursor: pointer'}
        = image_tag related.img.url(:small), style: 'object-fit: fill;'
