.container-fluid
  .row
    .resp-menu-bar.bg-brand.hidden-lg-up.text-right
      .container
        .row.justify-content-between.align-items-center
          .header-logo-responsive
            = link_to root_path do
              = image_tag 'logo-resp.png', class: 'img-fluid'
          .icon-wrapper
            %i.fa.fa-bars{style: 'aria-hidden="true"; '}
              %span.badge= @cart.positions.count if @cart.positions.any?
            %i.fa.fa-times{style: 'aria-hidden="true"; display: none;'}

  .header
    .promotion-bar.hidden-md-down.container-fluid
      .row
        .promotion.text-center.collapse#promo.bg-brand
          Акций пока нет!
      .row.text-center.justify-content-center
        .promo-toggle.bg-brand
          = link_to '', data:{toggle: 'collapse', target: '#promo' } do
            %i.fa.fa-gift
    .container
      .row.hidden-md-down.align-items-center
        .top-menu-left.text-left
          %ul.text-left.list-inline.list-unstyled
            %li.list-inline-item= link_to 'Контакты'
            %li.list-inline-item= link_to 'Доставка'
            %li.list-inline-item= link_to 'Админка', admin_root_path if current_user && current_user.admin?
        .top-menu-middle
          .menu-search
            = form_tag search_path, method: :get, class: 'form-horizontal' do
              .input-group
                = search_field_tag :tag_name,'', class: 'form-control form-control-sm', placeholder: 'Поиск по событию...'
                %span.input-group-btn
                  = button_tag(type: 'submit', class: 'btn btn-info btn-sm') do
                    %i.fa.fa-search
        .top-menu-right.text-right
          %ul.text-right.list-inline.list-unstyled
            - if current_user
              %li.list-inline-item Здравствуйте, #{current_user.first_name}
              %li.list-inline-item= link_to 'Выйти', logout_path, method: :post
            - else
              %li.list-inline-item= link_to 'Войти', login_path
              %li.list-inline-item= link_to 'Регистрация', signin_path
      .row
        .header-logo.hidden-md-down
          = link_to root_path do
            = image_tag 'logo1.png', class: 'img-fluid'
        .header-contacts.hidden-md-down
          Мы в соц.сетях
          .social
            %ul.list-unstyled.list-inline
              %li.list-inline-item
                =link_to 'https://www.instagram.com/bigairballoon_izh/', target: :_blank do
                  %i.fa.fa-instagram{"aria-hidden":  "true"}
              %li.list-inline-item
                =link_to 'https://www.facebook.com/bigairballoons/', target: :_blank do
                  %i.fa.fa-facebook{"aria-hidden": "true"}
              %li.list-inline-item
                =link_to 'https://vk.com/bigairballoon_izh', target: :_blank do
                  %i.fa.fa-vk{"aria-hidden": "true"}

          .order-call
            Позвоните нам!
            %ul.list-unstyled.phones
              %li +7(912)453-25-98
            = button_tag 'Заказать звонок', class: 'btn btn-info', data:{ toggle: 'modal', target: '#call-modal'}

= render 'delivery/layouts/call'
