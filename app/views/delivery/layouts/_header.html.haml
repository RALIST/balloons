.container-fluid
  .row.d-sm-none.d-xs-none.d-none.d-lg-block
    .col-12.bg-info.mb-1
      %ul.list-inline.d-flex.justify-content-between.m-0.fs-80
        %li.list-inline-item.pl-3
          = link_to 'О нас', about_path, class: 'text-white'
        %li.list-inline-item.pl-3
          = link_to 'Гарантии', garant_path, class: 'text-white'
        %li.list-inline-item.pl-3
          =link_to 'Доставка и оплата', info_path, class: 'text-white'
        %li.list-inline-item.pl-3
          =link_to 'Цены', prices_path, class: 'text-white'
        %li.list-inline-item.pl-3
          =link_to 'Контакты', contacts_path, class: 'text-white'
        %li.list-inline-item.pl-3
          =link_to 'Партнерам', partners_path, class: 'text-white'
.container-fluid#header
  .row#resp-fixed.d-lg-none.d-md-block
    .resp-menu-bar.bg-teal
      .header-logo-responsive.d-flex.justify-content-between.align-items-center
        = link_to root_path, class: 'w-50' do
          = image_tag 'logo-resp.png', class: 'img-fluid ml-4'
        #icon-wrapper
          %i.fa.fa-bars{style: 'aria-hidden="true"; cursor: pointer; '}
            %span.badge= @cart.positions.count if @cart.positions.any?
          %i.fa.fa-times{style: 'aria-hidden="true"; display: none; cursor: pointer;'}
  .container
    .row
      .header-logo.d-none.d-lg-block
        #logo
          = link_to root_path do
            = image_tag 'logo-round.png', class: 'img-fluid'
      .header-contacts.d-none.d-lg-block
        .row
          .col-4
            .row
              .col-2
                .social
                  %ul.nav.align-content-between.flex-column
                    %li.nav-item
                      =link_to 'https://www.instagram.com/bigairballoon_izh/', target: :_blank, class: 'nav-link' do
                        %i.fa.fa-instagram{"aria-hidden":  "true"}
                    %li.nav-item
                      =link_to 'https://www.facebook.com/bigairballoons/', target: :_blank , class: 'nav-link'do
                        %i.fa.fa-facebook{"aria-hidden": "true"}
                    %li.nav-item
                      =link_to 'https://vk.com/bigairballoon_izh', target: :_blank, class: 'nav-link' do
                        %i.fa.fa-vk{"aria-hidden": "true"}
              .col-10.text-center.justify-content-between.d-flex.flex-column
                .strong
                  .h3.mb-0
                    %small.text-info
                      %i.fa.fa-phone
                    234-084
                  .small.mb-2
                    c 8:00 до 21:00
                .small.text-center
                  WhatsApp | Viber | Telegram
                  .h5.m-0
                    +7 950 171-81-09
                .mt-2
                  = button_tag 'Нужна консультация', class: 'btn btn-secondary text-uppercase strong btn-sm', data:{ toggle: 'modal', target: '#call-modal'}
          .col-4.d-flex.justify-content-center
            %ul.p-0.m-0.list-group.list-group-flush
              .lead.text-center.text-secondary
                %i.fa.fa-car
                Доставка
              %li.list-group-item
                Бесплатная от 1200 руб.
              %li.list-group-item
                Минимальная от 600 руб.
          .col-4
            .row
              .col-12.text-right
                - unless current_user
                  .text-uppercase
                    %strong{style:'font-size: 0.9rem;'}
                      = link_to 'Войти', login_path
                      \/
                      = link_to 'Регистрация', signin_path
                - else
                  %span
                    Здравствуйте,
                    = current_user.first_name.capitalize
                    .small
                      - if current_user.admin?
                        = link_to 'Админка', '/admin',class: 'pr-3'
                      = link_to 'Личный кабинет', cp_path, class: 'pr-3'
                      = link_to 'Выйти', logout_path, method: :post
            #cart.d-flex.flex-row.align-items-center.justify-content-center.p-1.mt-2.rounded{data: {turbolinks: {permanent: true}}}
              #cart-icon.mr-4
                = link_to my_cart_path do
                  %i.fa.fa-shopping-basket.fa-3x.text-secondary
              .text-secondary
                .strong.lead

                  %span#sum
                    = @cart.total_price.round(0)
                  %span.text-primary
                    руб.
                .font-size-08.text-primary
                  Cкидка:
                  - if current_user
                    = current_user.discount
                  - else
                    = link_to 'Войдите', login_path
                #to-cart
                  = link_to my_cart_path do
                    В корзину
                    %i.fa.fa-angle-right
        .row.mt-3.mb-4
          .col-12
            - cache do
              = render 'delivery/layouts/main_menu'
= render 'delivery/layouts/call'
