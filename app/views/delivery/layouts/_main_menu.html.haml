#menu
  .container
    .row.hidden-xs
      .col-md-4.col-sm-6
        %ul.nav.nav-pills
          %li.text-uppercase.dropdown.h4{role: "presentation"}
            = link_to '', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
              Повод
              %i.fa.fa-caret-down{style: 'aria-hidden="true"'}
            %ul.dropdown-menu
              - @menu_tags.each do |tag|
                %li.text-capitalize= link_to tag, search_path(tag_name: tag)
          %li.text-uppercase.h4{role: "presentation"}
            = link_to '', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
              Кому
              %i.fa.fa-caret-down{style: 'aria-hidden="true"'}
            %ul.dropdown-menu
          %li.text-uppercase.dropdown.h4{role: "presentation"}
            = link_to '', class: 'dropdown-toggle', data:{toggle: 'dropdown'} do
              По цене
              %i.fa.fa-caret-down{style: 'aria-hidden="true"'}
            %ul.dropdown-menu
              %li
                .col-md-12
                  = form_tag price_range_path, method: :get do
                    .form-group
                      = number_field_tag :min,'',  class: 'form-control input-sm', placeholder: 'От'
                    .form-group
                      = number_field_tag :max,'',  class: 'form-control input-sm', placeholder: 'До'
                    .from-group
                      = button_tag(type: 'submit', class: 'btn btn-info btn-sm btn-block') do
                        %i.fa.fa-search

      .col-md-3.hidden-sm
        %ul.nav.nav-pills
          %li.h4.text-center
            = form_tag search_path, method: :get, class: 'form-horizontal' do
              .input-group
                = text_field_tag :tag_name,'', class: 'form-control input-sm', placeholder: 'Введите событие...'
                %span.input-group-btn
                  = button_tag(type: 'submit', class: 'btn btn-info btn-sm') do
                    %i.fa.fa-search
      .col-md-5.col-sm-6
        %ul.nav.nav-pills{style: 'float:right'}
          %li.text-uppercase.h4
            - if current_user
              = link_to account_path do
                %i.fa.fa-user{style: 'aria-hidden="true"'}
                Личный кабинет
          %li.text-uppercase.h4
            = link_to my_cart_path do
              %i.fa.fa-shopping-cart{style: 'aria-hidden="true"'}
              - if @cart.positions.any?
                %span.badge.on-icon{style: 'margin-left: 5em; margin-top: -1.3em; font-weight: normal'}
                  = @cart.total_price
                  %i.fa.fa-rub
              Корзина
    .row.hidden-md.hidden-lg
      .col-sm-12.col-xs-12
        %ul.nav.nav-pills
          %li.h4.text-center
            = form_tag search_path, method: :get, class: 'form-horizontal' do
              .input-group
                = search_field_tag :tag_name,'', class: 'form-control input-sm', placeholder: 'Введите событие...'
                %span.input-group-btn
                  = button_tag(type: 'submit', class: 'btn btn-info btn-sm') do
                    %i.fa.fa-search
    .row
      .col-md-12.col-sm-12.col-xs-12.text-uppercase.text-center.bg-brand
        %h5
          =link_to 'Бесплатная доставка от 1500 рублей!'
