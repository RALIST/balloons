.resp-menu{style: 'margin-top: 29px;'}
  .container-fluid
    .container
      .row
        .col-xs-12.col-sm-12
      .row
        .col-xs-12.col-sm-12{style: 'display: table; table-layout: fixed; float: none;'}
          .col-xs-4.col-sm-4{style: 'display: table-cell; vertical-align: middle; float: none;'}
            =link_to delivery_root_path do
              =image_tag 'logo2.png', class: 'img-responsive'
          .col-sm-8.col-xs-8{style: 'display: table-cell; vertical-align: middle; float: none;'}
            Нужна помощь?
            .h4
              +7(912)453-25-98
      .row
        .col-sm-12.col-xs-12
          %ul.nav.nav-pills
            %li.h4.text-center
              = form_tag delivery_search_path, method: :get, class: 'form-horizontal' do
                .input-group
                  = text_field_tag :tag_name,'', class: 'form-control input-sm', placeholder: 'Введите событие...'
                  %span.input-group-btn
                    = button_tag(type: 'submit', class: 'btn btn-primary btn-sm') do
                      %i.fa.fa-search
      .row
        .col-sm-12.col-xs-12
          %ul.list-unstyled.dropdown
            %li.dropdown
              .h3
                Повод
                %span.caret
              %ul.list-unstyled.dropdown-menus
                - Tag.composition_tags.each do |tag|
                  %li.text-capitalize.h4= link_to tag.name, delivery_search_path(tag_name: tag.name)
            %li.dropdown
              .h3
                Кому
                %span.caret
              %ul.list-unstyled.dropdown-menus
                - Tag.composition_tags.each do |tag|
                  %li.text-capitalize.h4= link_to tag.name, delivery_search_path(tag_name: tag.name)
            %li.dropdown
              .h3
                По цене
                %span.caret
              %ul.list-unstyled.dropdown-menus
                - Tag.composition_tags.each do |tag|
                  %li.text-capitalize.h4= link_to tag.name, delivery_search_path(tag_name: tag.name)
