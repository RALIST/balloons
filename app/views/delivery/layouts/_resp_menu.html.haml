    .row
      .col-12.p-0
        %ul.list-unstyled.dropdown.nav.nav-pills.flex-column
          %li.dropdown.nav-item
            .h4.d-flex.justify-content-between.align-items-center
              Повод
              %i.fa.fa-caret-down
            %ul.list-unstyled.dropdown-menus
              - @menu_tags.each do |tag|
                %li.h5
                  = link_to tag.name.capitalize, tag_path(tag), class: 'nav-link'
          %li.dropdown.nav-item
            .h4.d-flex.justify-content-between
              Кому
              %i.fa.fa-caret-down
            %ul.list-unstyled.dropdown-menus
              - @menu_receivers.each do |p|
                %li.h5
                  = link_to p.title.capitalize, receiver_path(p), class: 'nav-link'
          %li.dropdown.nav-item
            .h4.d-flex.justify-content-between
              По цене
              %i.fa.fa-caret-down
            %ul.list-unstyled.dropdown-menus
              %li.h5
                = link_to price_range_path(max: 1000), class: 'nav-link' do
                  До 1000
              %li.h5
                = link_to price_range_path(min: 1000, max: 3000), class: 'nav-link' do
                  От 1000 до 3000
              %li.h5
                = link_to price_range_path(min: 3000, max: 5000), class: 'nav-link' do
                  От 3000 до 5000
              %li.h5
                = link_to price_range_path(min: 5000, max: 8000), class: 'nav-link' do
                  От 5000 до 8000
              %li.h5
                = link_to price_range_path(min: 8000), class: 'nav-link' do
                  От 8000
          %li.dropdown.nav-item
            .h4.d-flex.justify-content-between
              Выпускные
              %i.fa.fa-caret-down
            %ul.list-unstyled.dropdown-menus
              %li.h5
                = link_to 'из садика', kg_path, class: 'nav-link'
              %li.h5
                = link_to 'из школы', school_path, class: 'nav-link'
    .row
      - if @cart.positions.any?
        .resp-cart
          = link_to my_cart_path, class: 'btn btn-primary btn-block' do
            %h3
              Корзина
              %span.badge
                = @cart.total_price
                %i.fa.fa-rub{style: 'aria-hidden="true"'}

    .row
      .col-12.p-0
        %ul.list-unstyled
          = link_to contacts_path do
            %li.nav-item.nav-item-secondary
              .ml-3
                Контакты
          = link_to feedbacks_path do
            %li.nav-item.nav-item-secondary
              .ml-3
                Отзывы
          - unless current_user
            = link_to login_path do
              %li.nav-item.nav-item-secondary
                .ml-3
                  Войти
            = link_to signin_path do
              %li.nav-item.nav-item-secondary
                .ml-3
                  Регистрация
          - else
            %li.nav-item.nav-item-secondary= link_to 'Личный кабинет', user_path(current_user)
