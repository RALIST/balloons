.resp-menu{style: 'padding-top: 2.55em; padding-bottom: 3em;'}
  .container-fluid
    .container
      .row
        .col-xs-12.col-sm-12
      .row.display-table
        .col-xs-4.col-sm-4.display-cell
          =link_to root_path do
            =image_tag 'logo2.png', class: 'img-responsive'
        .col-sm-8.col-xs-8.display-cell
          Нужна помощь?
          .h4
            +7(912)453-25-98
          WhatsApp Viber Telegram
      .row
        .col-sm-8.col-xs-10.col-sm-offset-2.col-xs-offset-1
          %ul.nav.nav-pills
            %li.h4.text-center{style: 'width: 100%;'}
              = form_tag search_path, method: :get, class: 'form-horizontal' do
                .input-group
                  = text_field_tag :tag_name,'', class: 'form-control input-sm', placeholder: 'Введите событие...'
                  %span.input-group-btn
                    = button_tag(type: 'submit', class: 'btn btn-info btn-sm') do
                      %i.fa.fa-search
      .row
        .col-sm-12.col-xs-12
          %ul.list-unstyled.dropdown
            %li.dropdown
              .h3
                Повод
                %span.caret
              %ul.list-unstyled.dropdown-menus
                - @menu_tags.each do |tag_name|
                  %li.text-capitalize.h4= link_to tag_name, by_tag_path(tag_name)
            %li.dropdown
              .h3
                Кому
                %span.caret
              %ul.list-unstyled.dropdown-menus
                - @menu_receivers.each do |title|
                  %li.h4.text-capitalize
                    = link_to title, person_path(title)
            %li.dropdown
              .h3
                По цене
                %span.caret
              %ul.list-unstyled.dropdown-menus
                %li.h4
                  = link_to price_range_path(max: 1000) do
                    До 1000
                %li.h4
                  = link_to price_range_path(min: 1000, max: 3000) do
                    От 1000 до 3000
                %li.h4
                  = link_to price_range_path(min: 3000, max: 5000) do
                    От 3000 до 5000
                %li.h4
                  = link_to price_range_path(min: 5000, max: 8000) do
                    От 5000 до 8000
                %li.h4
                  = link_to price_range_path(min: 8000) do
                    От 8000
      - if @cart.positions.any?
        .row{style: 'margin-top: 1em; border-bottom: 1px solid #ffffff; padding-bottom: 1em;'}
          .col-xs-8
            = link_to my_cart_path, class: 'btn btn-info btn-block' do
              Корзина
              %span.badge
                = @cart.total_price
                %i.fa.fa-rub{style: 'aria-hidden="true"'}

      .row
        .col-sm-12.col-xs-12{style: 'margin-top: 1.5em;'}
          %ul.list-unstyled.list-inline.h4
            - unless current_user
              %li= link_to 'Войти', login_path
              %li= link_to 'Регистрация', signin_path
            - else
              %li= link_to 'Личный кабинет', user_path(current_user)
