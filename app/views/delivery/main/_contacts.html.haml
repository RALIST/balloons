.container{itemscope: true, itemtype: "http://schema.org/LocalBusiness" }
  .row#contacts
    %div{itemprop: "logo",  itemscope: true, itemtype: "https://schema.org/ImageObject"}
      = image_tag 'logo-round.png', itemprop: 'image url', style: "display: none", alt: 'Логотип bigairballoons.ru'
    = image_tag 'logo-round.png', itemprop: 'image url', style: "display: none", alt: 'Логотип bigairballoons.ru'
    .col-12.d-none.d-lg-block
      .row
        .col-6#text-contacts
          %h2.text-center{itemprop: 'name'}
            Шариковая фея™
            .small
              Доставка воздушных шаров и оформление праздников
          %hr
          %ul.list-unstyled
            %li{itemprop: 'telephone'}
              %i.fas.fa-phone-square.fa-2x
              .lead.d-inline
                +7 (3412) 234-084
            %li{itemprop: 'address', itemscope: true, itemtype: 'http://schema.org/PostalAddress'}
              %meta{itemprop: 'addressCountry', content: 'RU'}
              %i.fas.fa-map-marker-alt.fa-2x
              .d-inline.w-100
                .lead.d-inline{itemprop: 'addressRegion'}
                  Удмуртская республика,
                .lead.d-inline{itemprop: 'addressLocality'}
                  г. Ижевск,
                .lead.d-inline{itemprop: 'streetAddress'}
                  ул. Н.Островского, 25, офис 6
            %li
              %i.far.fa-envelope.fa-2x
              .lead.d-inline{itemprop: 'email'}
                info@bigairballoons.ru
            %li
              %i.fas.fa-clock.fa-2x
              .lead.d-inline{itemprop: 'openingHours', datetime: 'Mo-Su, 08:00-20:00'}
                с 8:00 до 22:00, без выходных
          %hr
          .row.align-items-center
            .col-12
              %ul.nav.align-items-end.justify-content-between
                %li
                  = link_to t("cities.#{@city}.links.ins"), target: :_blank, rel: 'nofollow' do
                    %i.fab.fa-instagram.fa-2x{"aria-hidden":  "true"}
                %li
                  = link_to t("cities.#{@city}.links.fb"), target: :_blank , rel: 'nofollow' do
                    %i.fab.fa-facebook.fa-2x{"aria-hidden": "true"}
                %li
                  = link_to t("cities.#{@city}.links.vk"), target: :_blank, rel: 'nofollow' do
                    %i.fab.fa-vk.fa-2x{"aria-hidden": "true"}
        .col-6.border
          %script{type: "text/javascript", charset:"utf-8", async: true, src: "https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A14c90a9f5898798c7138c231992b812157614231ed60a0c7b45dee0553b4843e&amp;width=100%&amp;height=400&amp;lang=ru_RU&amp;scroll=true"}
    #text-contacts.col-12.d-lg-none
      %h1.h3.text-center
        Шариковая фея™
      %hr
      .text-center
        .h5
          Позвоните нам!
        .h3
          = link_to '+7 (3412) 234-084', 'tel: +7 (3412) 234-084'
        .h3.mt-3
          = link_to '+7 (950) 171-81-09', 'tel: +7 (950) 171-81-09'
      %hr
      .text-center
        .lead
          Прием заявок
        с 8:00 до 20:00, без выходных
        .lead.mt-2
          Доставка
        круглосуточно, без выходных
      %hr
      .d-flex.align-items-center.my-2.justify-content-between
        %i.fas.fa-map-marker-alt.fa-2x.text-info
        ул. Н. Островского, 25, офис 6
      .d-flex.align-items-center.my-2.justify-content-between
        %i.far.fa-envelope.fa-2x.text-info
        info@bigairballoons.ru

      %hr
      .small
        .mt-3.text-center
          ООО "ДЕЛИРИУМ"
          %br
          ИНН 1832110279
          %br
          КПП 183201001
          %br
          ОГРН 1131832004831
