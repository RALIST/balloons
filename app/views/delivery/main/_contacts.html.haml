.container-fluid{itemscope: true, itemtype: "http://schema.org/LocalBusiness" }
  .row#contacts
    %div{itemprop: "logo",  itemscope: true, itemtype: "https://schema.org/ImageObject"}
      = image_tag 'logo-round.png', itemprop: 'image url', style: "display: none", alt: 'Логотип bigairballoons.ru'
    = image_tag 'logo-round.png', itemprop: 'image url', style: "display: none", alt: 'Логотип bigairballoons.ru'
    .col-12.p-0#map.d-none.d-lg-block
      .map-block
        = image_tag 'map-block.png', class: 'img-fluid'
        #text-contacts
          %h3.text-white{itemprop: 'name'}
            Шариковая фея™
          %ul.list-unstyled
            %li.text-white.d-flex.align-items-center.border-bot.py-2.justify-content-between{itemprop: 'telephone'}
              %i.fas.fa-phone-square.fa-2x
              %span
                +7 (3412) 234-084
            %li.text-white.d-flex.align-items-center.py-2.border-bot.justify-content-between{itemprop: 'address', itemscope: true, itemtype: 'http://schema.org/PostalAddress'}
              %meta{itemprop: 'addressCountry', content: 'RU'}
              %i.fas.fa-map-marker-alt.fa-2x
              .row
                .col-12.text-right{itemprop: 'addressRegion'}
                  Удмуртская республика
                .col-12.text-right{itemprop: 'addressLocality'}
                  г. Ижевск
                .col-12.text-right{itemprop: 'streetAddress'}
                  ул. Н.Островского, 25, офис 6
            %li.text-white.d-flex.align-items-center.py-2.border-bot.justify-content-between
              %i.far.fa-envelope.fa-2x
              .row
                .col-12{itemprop: 'email'}
                  info@bigairballoons.ru
            %li.text-white.d-flex.align-items-center.py-2.border-bot.justify-content-between
              %i.fas.fa-clock.fa-2x
              %time{itemprop: 'openingHours', datetime: 'Mo-Su, 08:00-20:00'}
                с 8:00 до 22:00, без выходных

