- breadcrumb :products
.container-fluid.c-list
  %h1.h2.text-center
    %span
      Гелиевые шары с доставкой
  #check
    .row.align-items-center.justify-content-center
      .flag.d-flex.align-items-center.justify-content-center.text-info.w-50.lead
        ИЛИ
      .col-12.col-lg-6.bg-info.rounded.py-4
        .h4.text-left.text-white
          Выберите готовое оформление
          .small
            > 300 готовых композиций
        = link_to 'Выбрать', tags_path, class: 'btn btn-secondary mb-2 text-uppercase'
      .col-12.col-lg-6.bg-secondary.text-right.rounded.py-4
        .h4.text-right.text-white
          Создайте свое оформление
          .small
            Огромный выбор шаров
        = link_to 'Выбрать', categories_path, class: 'btn btn-info mb-2 text-uppercase'
.container.mt-4
  %h2.mt-5.text-center Коллекции
  .row
    .col-12.my-3
      .input-group
        = text_field_tag :search,'', class: 'form-control', placeholder: 'Поиск по категориям'
        %span.input-group-append
          = button_tag(class: 'btn btn-info', id: 'clear-search', title: 'Очистить', data: {toggle: 'tooltip'}) do
            %i.fa.fa-times
  .card-columns
    = render partial: 'delivery/categories/category', collection:  @categories
  %h2.mt-5.text-center Цвета
  %hr
  .card-columns
    = render @colors




