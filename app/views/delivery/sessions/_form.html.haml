.container
  .row
    .col-md-4.col-sm-4.hidden-xs
      = link_to root_path do
        = image_tag 'logo2.png', class: 'img-responsive pull-right'
    .col-md-4.col-sm-4.col-xs-12
      %h2 Войдите
      = form_tag sessions_path,  method: :post, class: 'form-horizontal border-right' do
        .form-group
          .col-sm-10
            = label_tag '', 'Ваше имя', class: 'lable-control'
            .input-group
              %span.input-group-addon
                %i.fa.fa-user{style: 'aria-hidden="true"'}
              = text_field_tag :password, '', class: 'form-control', required: true
        .form-group
          .col-sm-10
            = label_tag '', 'Номер телефона', class: 'lable-control'
            .input-group
              %span.input-group-addon
                %i.fa.fa-phone{style: 'aria-hidden="true"'}
              = telephone_field_tag :phone, nil, data:{ mask: '+7 (999) 999 99 99' },  class: 'form-control', required: true
        .form-group
          .col-sm-10
            .checkbox
              %label
                = check_box_tag :remember_me
                Запомнить меня
        .form-group
          .col-sm-10
            = submit_tag 'Войти', class: 'btn btn-info btn-block'
    .col-md-4.col-sm-4.col-xs-12
      %h2 Через соц.сети
