.container
  .row
    .col-md-4.col-sm-4.hidden-xs
      = link_to delivery_root_path do
        = image_tag 'logo2.png', class: 'img-responsive pull-right'
    .col-md-4.col-sm-4.col-xs-12
      %h2 Войдите
      = form_tag delivery_sessions_path,  method: :post, class: 'form-horizontal border-right' do
        .form-group
          .col-sm-10
            = label_tag '', 'Ваше имя', class: 'lable-control'
            = text_field_tag :password, '', class: 'form-control'
        .form-group
          .col-sm-10
            = label_tag '', 'Номер телефона', class: 'lable-control'
            = text_field_tag :phone, '', class: 'form-control'
        .form-group
          .col-sm-10
            .checkbox
              %label
                = check_box_tag :remember_me
                Запомнить меня
        .form-group
          .col-sm-10
            = submit_tag 'Войти', class: 'btn btn-info btn-block'
    .col-md-4.col-sm-4.col-xs-12
      %h2 Через соц.сети
