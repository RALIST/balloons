.form-wrapper.d-flex.align-items-center.justify-content-around
  .container.col-md-10.col-sm-10.col-xs-10
    .row.text-center
      .col-md-12.col-sm-12.col-xs-12
        %h2 Войдите
    .row.align-items-center
      .form-img.hidden-md-down
        = link_to root_path do
          = image_tag 'logo2.png', class: 'img-fluid'
      .form-container
        = form_tag sessions_path,  method: :post, class: 'form-horizontal' do
          .form-group
            = label_tag '', 'Ваше имя', class: 'lable-control'
            .input-group
              %span.input-group-addon
                %i.fa.fa-user{style: 'aria-hidden="true"'}
              = text_field_tag :password, '', class: 'form-control', required: true
          .form-group
            = label_tag '', 'Номер телефона', class: 'lable-control'
            .input-group
              %span.input-group-addon
                %i.fa.fa-phone{style: 'aria-hidden="true"'}
              = telephone_field_tag :phone, nil, data:{ mask: '+7 (999) 999 99 99' },  class: 'form-control', required: true
          .form-group
            .form-check
              %label
                = check_box_tag :remember_me
                Запомнить меня
          .form-group.col-8.mx-auto
            = submit_tag 'Войти', class: 'btn btn-info btn-block'
    .row.text-center
      .col-12
        Нет аккаунта?
        = link_to 'Регистрация', signin_path
