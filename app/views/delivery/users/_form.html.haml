.container
  .row
    .col-md-4.col-sm-4.hidden-xs
      = link_to delivery_root_path do
        = image_tag 'logo2.png', class: 'img-responsive pull-right'
    .col-md-4.col-xs-12.col-sm-8
      %h2 Регистрация
      = form_for [:delivery, @user], html: {class: 'form-horizontal border-right'}  do |f|
        .form-group
          .col-sm-10
            = f.label 'Ваше имя', class: 'lable-control'
            = f.text_field :password, class: 'form-control'
        .form-group
          .col-sm-10
            = f.label "Ваш телефон", class: 'lable-control'
            .input-group
              %span.input-group-addon
                +7
              = f.text_field :phone, class: 'form-control', placeholder: '999 999 99 99'
        .form-group
          .col-sm-10
            = f.submit 'Зарегистрироваться', class: 'btn btn-info btn-block'
    .col-md-4.col-sm-4.col-xs-12
      %h2 Через соц.сети
