!!!
%html
  %head
    = render 'delivery/layouts/special/meta'
    = display_meta_tags
    = favicon_link_tag 'favicons/favicon-32.png'
    = favicon_link_tag 'favicons/favicon-120.png', rel: 'apple-touch-icon'
    = csrf_meta_tags
    = stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "https://www.google.com/recaptcha/api.js?render=explicit&onload=#{MyGoogleRecaptcha.onload_function}", 'data-turbolinks-track': 'reload'
  %body
    .wrapper
      %header
        - unless @disable_header
          = render 'delivery/layouts/header'
      = render 'delivery/layouts/flash'
      .container-fluid.main#main-container
        .row.no-gutters
          = render 'delivery/layouts/sidebar' unless @disable_sidebar
          .col
            = yield
            = render 'delivery/main/help' unless @disable_help
            = render 'delivery/main/seo'

            -#= render 'delivery/layouts/modal_city'
    = render 'delivery/layouts/call'
    = render 'delivery/calls/price_call'
    %footer
      = render 'delivery/layouts/footer' unless @disable_footer
    = render 'delivery/layouts/special/scripts'
  %noscript
    %div
      %img{src: "https://mc.yandex.ru/watch/37371855", style: "position:absolute; left:-9999px;", alt: ""}
