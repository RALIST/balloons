- Item.with_img.limit(20).each do |item|
  .item
    .thumbnail
      .row#items
        .item-img
          = link_to item_path(item) do
            = image_tag item.img.url(:small), class: 'img-responsive'
        .item-info
          .row
            .item-name
              %label
                =link_to item.name.capitalize, item_path(item)
            .item-vendor
              = item.made_by.upcase unless item.made_by.blank?
          .row
            .item-to-cart
              .row
                .item-size-label
                  = label_tag :size, 'Размер'
                .item-price-label.hidden-xs
                  .row
                    .col-md-6
                      %label Цена
                    .col-md-6
                      %label В уп.
                .item-count-label.hidden-xs
                  = label_tag :count, 'Количество'
              .row
                .item-size
                  = select_tag :size, options_for_select(['14"/35cm', '16"/45cm', '18"54cm']), class: 'form-control input-sm'
                .item-price.hidden-xs
                .item-count.hidden-xs
                  .form-horizontal
                    .form-group
                      .input-group
                        .input-group-addon
                          %i.fa.fa-plus
                        = number_field_tag :count, '', class: 'form-control input-sm text-center'
                        .input-group-addon
                          %i.fa.fa-minus
          .row
            .cart-button
              = link_to 'В корзину', '', class: 'btn btn-info btn-block'


