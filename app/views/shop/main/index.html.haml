- Item.with_img.limit(20).each do |item|
  .item
    .thumbnail
      .row#items
        .item-img
          = link_to item_path(item) do
            = image_tag item.img.url(:small), class: 'img-responsive'
        .item-info
          %label
            =link_to item.name.capitalize, item_path(item)
          %span.made.text-right
            = item.made_by.upcase unless item.made_by.blank?
          .row
            .item-to-cart
              .row
                .item-size-label
                  = label_tag :size, 'Размер'
                .item-price-label
                  %label Цена
                  %label В уп.
                .item-count-label
                  = label_tag :count, 'Количество'
              .row
                .item-size
                  = select_tag :size, options_for_select(['14"', '16"', '18"']), class: 'form-control input-sm'
                .item-price
                .item-count
                  .form-horizontal
                    .form-group
                      .input-group
                        .input-group-addon
                          %i.fa.fa-plus
                        = number_field_tag :count, '', class: 'form-control input-sm text-center'
                        .input-group-addon
                          %i.fa.fa-minus



